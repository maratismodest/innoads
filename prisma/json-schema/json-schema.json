{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "schemas": {
    "Post": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "category": {
          "$ref": "#/schemas/Category"
        },
        "price": {
          "type": "integer"
        },
        "title": {
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "preview": {
          "type": "string"
        },
        "images": {
          "type": "string"
        },
        "slug": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "published": {
          "type": "boolean",
          "default": false
        },
        "user": {
          "$ref": "#/schemas/User"
        },
        "messages": {
          "type": "array",
          "items": {
            "$ref": "#/schemas/Message"
          }
        }
      }
    },
    "Message": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "post": {
          "$ref": "#/schemas/Post"
        }
      }
    },
    "User": {
      "type": "object",
      "properties": {
        "id": {
          "type": "string"
        },
        "username": {
          "type": "string"
        },
        "posts": {
          "type": "array",
          "items": {
            "$ref": "#/schemas/Post"
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "bans": {
          "type": "array",
          "items": {
            "$ref": "#/schemas/Ban"
          }
        },
        "role": {
          "type": "string",
          "default": "USER",
          "enum": [
            "USER",
            "ADMIN"
          ]
        }
      }
    },
    "Ban": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "user": {
          "$ref": "#/schemas/User"
        },
        "reason": {
          "type": [
            "string",
            "null"
          ],
          "default": "Нарушение правил"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      }
    },
    "Article": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "slug": {
          "type": "string"
        },
        "title": {
          "type": "string"
        },
        "body": {
          "type": "string"
        }
      }
    },
    "Category": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "name": {
          "type": "string"
        },
        "label": {
          "type": "string"
        },
        "image": {
          "type": "string"
        },
        "posts": {
          "type": "array",
          "items": {
            "$ref": "#/schemas/Post"
          }
        }
      }
    },
    "Log": {
      "type": "object",
      "properties": {
        "id": {
          "type": "integer"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        },
        "message": {
          "type": "string"
        }
      }
    }
  },
  "type": "object",
  "properties": {
    "post": {
      "$ref": "#/schemas/Post"
    },
    "message": {
      "$ref": "#/schemas/Message"
    },
    "user": {
      "$ref": "#/schemas/User"
    },
    "ban": {
      "$ref": "#/schemas/Ban"
    },
    "article": {
      "$ref": "#/schemas/Article"
    },
    "category": {
      "$ref": "#/schemas/Category"
    },
    "log": {
      "$ref": "#/schemas/Log"
    }
  }
}
